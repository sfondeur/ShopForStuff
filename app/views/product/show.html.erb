<!--<%= render partial: 'product',
           object: @product,
           locals: { show_details_link: false} %>-->
<p>
  <%= link_to 'Home', '/' %> /
  <%= link_to 'Products', product_index_path %> /
  <%= @product.id %>
</p>

<div class="col s12 show_card">
  <div class="card horizontal">
    <div style="width: 500px;">
      <img class="show_image" src="<%= @product.image %>" alt="full image">
    </div>
    <div class="card-stacked">
      <div class="card-content">
      <h4 class="header"><%= @product.title %></h4>
        <div class="card-action"></div>
          <ul>
            <li><b>Description: </b> <%= @product.description %></li>
            <li><b>Price: </b> <%= number_to_currency @product.price %></li>
            <li><b>Categories: </b> 
              <% @product.product_categories.each do |cat| %>
                <%= link_to cat.category.title, cat.category %>
              <% end %>
            </li>
            <li><b>Manufacturer: </b> <%= @product.manufacturer %></li>
          </ul>
          <!--<button class="btn waves-light" type="submit" name="action">Add to Cart
            <i class="material-icons right">shopping_cart</i>
          </button> -->

          <%= link_to add_to_cart_product_path(@product), method: :post, class: "btn waves-light" do %>
            Add to Cart<i class="material-icons right">shopping_cart</i>
          <% end %>

          <!--<%= button_to "Add To Cart", root_url, :method => :post, :class => "btn waves-light" %> -->
        </div>
    </div>
  </div>
</div>